{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true
  },
  
  "lib": ["es2019"],

  "include": [
    "./main",
    "./main/classes",
    "./main/commands",
    "./main/events",
    "./main/resources",
    "./main/resources/*"
  ]
}
